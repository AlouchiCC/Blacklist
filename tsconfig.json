{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.json",
      "./config.json"
    ],
    "exclude": ["node_modules"]
  }